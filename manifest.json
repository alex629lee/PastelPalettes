{
  "manifest_version": 2,
  "name": "Twitter Pastel Palettes",
  "description": "Cute pastel color themes for Twitter in Chrome",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["main.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup/popup.html",
    "default_title": "Twitter Pastel Palettes"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}